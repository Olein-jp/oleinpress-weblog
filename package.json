{
  "name": "oleinpress-weblog",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "test": "composer test",
    "cleanup:css": "rimraf assets/css && mkdir -p assets/css",
    "cleanup:js": "rimraf assets/js && mkdir -p assets/js",
    "cleanup:images": "rimraf assets/images && mkdir -p assets/images",
    "cleanup:packages": "rimraf assets/packages && mkdir -p assets/packages",
    "cleanup:zip": "rimraf oleinpress-weblog.zip",
    "css:style:sass": "node-sass --source-map true --include-path=node_modules/node-normalize-scss src/assets/sass/style.scss -o assets/css",
    "css:style:sutoprefixer": "postcss assets/css/style.css --use autoprefixer -o assets/css/style.css",
    "css:style:postcss": "postcss assets/css/style.css -o assets/css/style.min.css -c=postcss.config.js",
    "css:style": "npm-run-all -s css:style:*",
    "css:editor-style:sass": "node-sass --include-path=node_modules/node-normalize-scss src/assets/sass/editor-style.scss -o assets/css",
    "css:editor-style:postcss": "postcss assets/css/editor-style.css -o assets/css/editor-style.min.css -c=postcss.config.js",
    "css:editor-style": "npm-run-all -s css:editor-style:*",
    "css": "npm run cleanup:css && npm-run-all -p css:*",
    "js:app:rollup": "rollup src/assets/js/app.js --dir assets/js -c=rollup.config.js",
    "js:app:uglifyjs": "uglifyjs assets/js/app.js -o assets/js/app.min.js -mc",
    "js:app": "npm-run-all -s js:app:*",
    "js": "npm run cleanup:js && npm-run-all -p js:*",
    "images": "npm run cleanup:images && cpy 'src/assets/images/**' assets/images",
    "packages:humburgers": "cpx 'node_modules/hamburgers/**' 'src/assets/packages/hamburgers'",
    "packages:superfish": "cpx 'node_modules/superfish/dist/**' 'src/assets/packages/superfish'",
    "packages": "npm run cleanup:packages && npm-run-all packages:*",
    "watch:css": "watch 'npm run css:style' ./src/assets/sass",
    "watch:image": "onchange 'src/assets/images' -e '**/*.DS_Store' -- npm run images",
    "watch:php": "browser-sync start -p 'oleinpressweblog.wordpress' -f '**/*' 'assets/**'",
    "watch": "npm-run-all -p watch:*",
    "zip:pack": "composer install --no-dev && rsync -a --exclude='.*' --exclude='/node_modules' --exclude='*.config.js' --exclude='*.json' --exclude='*.lock' ./ oleinpress-weblog",
    "zip:archive": "zip -9 -qmr oleinpress-weblog.zip oleinpress-weblog",
    "zip": "npm run cleanup:zip && npm run zip:pack && npm run zip:archive",
    "build": "npm run packages && npm-run-all -p js css images"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Olein-jp/oleinpress-weblog.git"
  },
  "author": "Olein-jp",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/Olein-jp/oleinpress-weblog/issues"
  },
  "homepage": "https://github.com/Olein-jp/oleinpress-weblog#readme",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "autoprefixer": "^9.4.2",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.3",
    "cpx": "^1.5.0",
    "cpy-cli": "^2.0.0",
    "cssnano": "^4.1.7",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.1.3",
    "postcss-cli": "^6.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "uglify-js": "^3.4.9",
    "watch": "^1.0.2",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.6.0",
    "hamburgers": "^1.1.3",
    "superfish": "^1.7.10"
  }
}
