.mw-share-button {
  &__count {
    position: relative;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 3px;
    text-align: center;

    &::before {
      content: "";
      position: absolute;
      border-style: solid;
      height: 0;
      width: 0;
    }

    &::after {
      content: "";
      position: absolute;
      border-style: solid;
      height: 0;
      width: 0;
    }
  }

  &__button {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 3px;
    color: #333;
    font-family: Arial, serif;
    font-size: 11px;
    overflow: hidden;
    white-space: nowrap;
    text-decoration: none;

    &:hover {
      background-color: #fff;
    }

    > span {
      margin-right: 3px;
    }
  }

  &__icon {
    &--feedly {
      font-family: 'wp-mw-share-buttons' !important;

      &::before {
        content: "\e600";
        color: #6cc655;
      }
    }

    &--hatena {
      font-family: 'wp-mw-share-buttons' !important;

      &::before {
        content: "\e601";
        color: #008be2;
      }
    }

    &.fa-twitter {
      &::before {
        color: #00acf2;
      }
    }

    &.fa-facebook {
      &::before {
        color: #4555ab;
      }
    }

    &.fa-get-pocket {
      &::before {
        color: #ff002d;
      }
    }
  }

  &--balloon {
    margin: 0 6px 0 0;
    padding: 0;
    width: 80px;

    .mw-share-button__count {
      font-size: 16px;
      margin: 0 0 6px;
      padding: 4px 10px;

      &:before {
        bottom: -5px;
        left: 50%;
        margin-left: -5px;
        border-width: 5px 5px 0 5px;
        border-color: #ddd transparent transparent transparent;
      }

      &:after {
        bottom: -4px;
        left: 50%;
        margin-left: -5px;
        border-width: 5px 5px 0 5px;
        border-color: #fff transparent transparent transparent;
      }
    }

    .mw-share-button__button {
      padding: 3px 6px;
      line-height: 1.2;
    }
  }

  &--horizontal {
    margin: 0 6px 0 0;
    display: flex;
    flex-flow: row-reverse;

    .mw-share-button__count {
      float: right;
      font-size: 11px;
      padding: 1px 5px;

      &:before {
        left: -5px;
        top: 50%;
        margin-top: -5px;
        border-width: 5px 5px 5px 0;
        border-color: transparent #ddd transparent transparent;
      }

      &:after {
        left: -4px;
        top: 50%;
        margin-top: -5px;
        border-width: 5px 5px 5px 0;
        border-color: transparent #fff transparent transparent;
      }
    }

    .mw-share-button__button {
      float: left;
      margin: 0 5px 0 0;
      padding: 1px 7px 1px 5px;
    }
  }
}
